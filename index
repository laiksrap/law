  <script>
    // ---------- Animated particles background ----------
    (function(){
      const c = document.getElementById('fx');
      const ctx = c.getContext('2d');
      let w,h,particles=[];
      const N=80;
      function resize(){ w=c.width=window.innerWidth; h=c.height=window.innerHeight*.66; }
      function rnd(a,b){return a+Math.random()*(b-a)}
      function init(){
        particles=[];
        for(let i=0;i<N;i++){
          particles.push({
            x:rnd(0,w), y:rnd(0,h),
            vx:rnd(-.3,.3), vy:rnd(-.3,.3),
            r:rnd(1.2,2.6), a:rnd(.2,.9)
          });
        }
      }
      function step(){
        ctx.clearRect(0,0,w,h);
        // glow grid
        const grad=ctx.createLinearGradient(0,0,w,h);
        grad.addColorStop(0,'rgba(47,71,187,.15)');
        grad.addColorStop(1,'rgba(255,106,61,.08)');
        ctx.fillStyle=grad; ctx.fillRect(0,0,w,h);
        // particles
        for(const p of particles){
          p.x+=p.vx; p.y+=p.vy;
          if(p.x<0||p.x>w) p.vx*=-1;
          if(p.y<0||p.y>h) p.vy*=-1;
          ctx.beginPath();
          ctx.arc(p.x,p.y,p.r,0,Math.PI*2);
          ctx.fillStyle=`rgba(159,179,255,${p.a})`;
          ctx.fill();
        }
        // links
        for(let i=0;i<particles.length;i++){
          for(let j=i+1;j<particles.length;j++){
            const a=particles[i], b=particles[j];
            const dx=a.x-b.x, dy=a.y-b.y, d=Math.hypot(dx,dy);
            if(d<100){
              ctx.strokeStyle=`rgba(255,255,255,${.05*(1-d/100)})`;
              ctx.lineWidth=1;
              ctx.beginPath(); ctx.moveTo(a.x,a.y); ctx.lineTo(b.x,b.y); ctx.stroke();
            }
          }
        }
        requestAnimationFrame(step);
      }
      window.addEventListener('resize', ()=>{resize(); init();});
      resize(); init(); step();
    })();

    // ---------- Risk slider logic ----------
    (function(){
      const r=document.getElementById('riskRange');
      const val=document.getElementById('riskVal');
      const hint=document.getElementById('riskHint');
      const fill=document.getElementById('riskFill');
      function update(){
        val.textContent = r.value+'/10';
        fill.style.width = (r.value*10)+'%';
        let msg='Низкий риск. Но базовые документы всё равно нужны.';
        if(r.value>=4 && r.value<=6) msg='Средний риск. Сделайте пакет документов и настройте ERID.';
        if(r.value>=7 && r.value<=8) msg='Повышенный риск. Нужен аудит и исправление ошибок на сайте/в соцсетях.';
        if(r.value>=9) msg='Высокий риск. Рекомендуем полный пакет и сопровождение.';
        hint.textContent = msg;
      }
      r.addEventListener('input', update); update();
    })();

    // ---------- Simple carousel ----------
    (function(){
      const track=document.getElementById('track');
      const slides=[...track.children];
      const dotsWrap=document.getElementById('dots');
      let idx=0, timer=null;
      function go(i){
        idx=(i+slides.length)%slides.length;
        track.style.transform=`translateX(-${idx*100}%)`;
        [...dotsWrap.children].forEach((d,k)=>d.classList.toggle('active',k===idx));
      }
      slides.forEach((_,i)=>{
        const d=document.createElement('div'); d.className='dot'+(i===0?' active':'');
        d.onclick=()=>{go(i); resetAuto();}; dotsWrap.appendChild(d);
      });
      function auto(){ timer=setInterval(()=>go(idx+1), 5000); }
      function resetAuto(){ clearInterval(timer); auto(); }
      auto();
    })();

    // ---------- Subtle 3D tilt on mouse ----------
    (function(){
      document.querySelectorAll('.tilt').forEach(card=>{
        card.addEventListener('mousemove', (e)=>{
          const r=card.getBoundingClientRect();
          const x=((e.clientX - r.left)/r.width - .5)*10;
          const y=((e.clientY - r.top)/r.height - .5)*-10;
          card.style.transform=`perspective(800px) rotateX(${y}deg) rotateY(${x}deg)`;
        });
        card.addEventListener('mouseleave', ()=>card.style.transform='');
      });
    })();
  </script>
</body>
</html>
