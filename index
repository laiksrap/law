  <script>
    // ----- Particles: уменьшаем нагрузку на мобильных -----
    (function(){
      const c=document.getElementById('fx'); const ctx=c.getContext('2d');
      let w,h,ps=[]; const isMobile = matchMedia("(max-width: 719px)").matches;
      const N=isMobile?40:80;
      function R(a,b){return a+Math.random()*(b-a)}
      function resize(){ w=c.width=window.innerWidth; h=c.height=Math.max(320, window.innerHeight*0.58); }
      function init(){ ps=[]; for(let i=0;i<N;i++) ps.push({x:R(0,w),y:R(0,h),vx:R(-.25,.25),vy:R(-.25,.25),r:R(1.1,2.2),a:R(.25,.8)}); }
      function step(){
        ctx.clearRect(0,0,w,h);
        const grad=ctx.createLinearGradient(0,0,w,h);
        grad.addColorStop(0,'rgba(47,71,187,.14)'); grad.addColorStop(1,'rgba(255,106,61,.08)');
        ctx.fillStyle=grad; ctx.fillRect(0,0,w,h);
        for(const p of ps){
          p.x+=p.vx; p.y+=p.vy; if(p.x<0||p.x>w) p.vx*=-1; if(p.y<0||p.y>h) p.vy*=-1;
          ctx.beginPath(); ctx.arc(p.x,p.y,p.r,0,Math.PI*2);
          ctx.fillStyle=`rgba(159,179,255,${p.a})`; ctx.fill();
        }
        for(let i=0;i<ps.length;i++){
          for(let j=i+1;j<ps.length;j++){
            const a=ps[i], b=ps[j], d=Math.hypot(a.x-b.x,a.y-b.y);
            if(d<90){ ctx.strokeStyle=`rgba(255,255,255,${.05*(1-d/90)})`; ctx.beginPath(); ctx.moveTo(a.x,a.y); ctx.lineTo(b.x,b.y); ctx.stroke(); }
          }
        }
        requestAnimationFrame(step);
      }
      window.addEventListener('resize', ()=>{resize(); init();});
      resize(); init(); step();
    })();

    // ----- Risk slider -----
    (function(){
      const r=document.getElementById('riskRange'), val=document.getElementById('riskVal'),
            hint=document.getElementById('riskHint'), fill=document.getElementById('riskFill');
      function update(){
        val.textContent = r.value+'/10';
        fill.style.width = (r.value*10)+'%';
        let msg='Низкий риск. Но базовые документы всё равно нужны.';
        if(r.value>=4 && r.value<=6) msg='Средний риск. Нужен пакет документов и ERID.';
        if(r.value>=7 && r.value<=8) msg='Повышенный риск. Рекомендуем аудит и исправления.';
        if(r.value>=9) msg='Высокий риск. Полный пакет и сопровождение.';
        hint.textContent = msg;
      }
      r.addEventListener('input', update); update();
    })();

    // ----- Carousel -----
    (function(){
      const track=document.getElementById('track'), slides=[...track.children], dotsWrap=document.getElementById('dots');
      let idx=0, timer=null;
      function go(i){ idx=(i+slides.length)%slides.length; track.style.transform=`translateX(-${idx*100}%)`; [...dotsWrap.children].forEach((d,k)=>d.classList.toggle('active',k===idx)); }
      slides.forEach((_,i)=>{ const d=document.createElement('div'); d.className='dot'+(i===0?' active':''); d.onclick=()=>{go(i); resetAuto();}; dotsWrap.appendChild(d); });
      function auto(){ timer=setInterval(()=>go(idx+1), 5000); } function resetAuto(){ clearInterval(timer); auto(); }
      auto();
    })();

    // ----- Отключаем 3D-tilt на мобильных (для стабильности верстки) -----
    (function(){
      const isMobile = matchMedia("(max-width: 719px)").matches;
      if(!isMobile){ /* если нужно добавить эффект — можно подключить, для мобилы оставляем статично */ }
    })();
  </script>
